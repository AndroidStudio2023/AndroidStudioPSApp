<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context=".ServicesCentralPage">

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/appicon1" />

    <TextView
        android:id="@+id/textView33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Κεντρική Σελίδα Παροχών"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView7" />

    <TableLayout
        android:id="@+id/tableLayout2"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_marginTop="42dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchServiceBar">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/servCodeCol"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@color/tableHeaderColor"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="Κωδ."
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/nameServiceCol"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@color/tableHeaderColor"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="Όνομα"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/descriptionServiceCol"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@color/tableHeaderColor"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="Περιγραφή"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/costServiceCol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@color/tableHeaderColor"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="Κόστος"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </TableLayout>

    <EditText
        android:id="@+id/searchServiceBar"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/normal_textfileds_border"
        android:ems="10"
        android:hint="Αναζήτηση"
        android:inputType="textPersonName"
        android:paddingLeft="5dp"
        android:paddingBottom="3dp"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView33" />

    <ImageButton
        android:id="@+id/searchServButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/normal_textfileds_border"
        android:padding="5dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@+id/searchServiceBar"
        app:layout_constraintEnd_toStartOf="@+id/searchServiceBar"
        app:layout_constraintTop_toTopOf="@+id/searchServiceBar"
        app:srcCompat="@drawable/search" />

    <Button
        android:id="@+id/addServiceButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="Νέα Παροχή +"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>