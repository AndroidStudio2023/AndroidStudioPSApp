<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".new_patient">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e0e0d1">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView41">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Όνομα"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/userEmail"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/normal_textfileds_border"
                android:backgroundTint="@null"
                android:ems="10"
                android:gravity="bottom"
                android:inputType="textEmailAddress"
                android:paddingLeft="5dp"
                android:paddingBottom="3dp"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/emailErrorMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/errorColor" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:text="Διεύθυνση"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/userPassword"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/normal_textfileds_border"
                android:ems="10"
                android:gravity="bottom"
                android:inputType="textPassword"
                android:paddingLeft="5dp"
                android:paddingBottom="3dp"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/passwordErrorMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/errorColor" />

            <TextView
                android:id="@+id/textView43"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:text="Α.Μ.Κ.Α"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/userEmail3"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/normal_textfileds_border"
                android:backgroundTint="@null"
                android:ems="10"
                android:gravity="bottom"
                android:inputType="textEmailAddress"
                android:paddingLeft="5dp"
                android:paddingBottom="3dp"
                android:textSize="20sp" />

        </LinearLayout>

        <Button
            android:id="@+id/PSFLogButton4"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/buttonColor"
            android:onClick="moveToLoginPage"
            android:text="Δημιουργία"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

        <TextView
            android:id="@+id/textView41"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/patientdescriptionMessage"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView40" />

        <TextView
            android:id="@+id/textView40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/patient"
            android:textColor="@color/black"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView12" />

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="64dp"
            android:src="@drawable/appicon1"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>