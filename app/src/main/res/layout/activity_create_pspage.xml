<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:onClick="clearForm"
    tools:context=".CreatePSPage">

    <LinearLayout
        android:id="@+id/contentCreatePSFPage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|top"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="64dp"
            android:layout_marginBottom="24dp"
            app:srcCompat="@drawable/appicon1" />

        <TextView
            android:id="@+id/textView28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="@string/addClincPageHeader"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="400dp">

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Στοιχεία\n Φυσιοθεραπευτηρίου"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/clinicNameHeader"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/newPSName"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/normal_textfileds_border"
                    android:ems="10"
                    android:hint="εώς 45 χαρακτήρες"
                    android:inputType="textPersonName"
                    android:paddingLeft="5dp"
                    android:paddingBottom="3dp" />

                <TextView
                    android:id="@+id/nameErrorMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/errorColor"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textView24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/clinicAddressHeader"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/newPSAddress"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/normal_textfileds_border"
                    android:ems="10"
                    android:hint="εώς 30 χαρακτήρες"
                    android:inputType="textPersonName"
                    android:paddingLeft="5dp"
                    android:paddingBottom="3dp" />

                <TextView
                    android:id="@+id/addresErrorMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/errorColor"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textView27"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/clinicAFMHeader"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/newPSAFM"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/normal_textfileds_border"
                    android:ems="10"
                    android:hint="9 ψηφία"
                    android:inputType="number"
                    android:paddingLeft="5dp"
                    android:paddingBottom="3dp" />

                <TextView
                    android:id="@+id/afmErrorMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/errorColor"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:text="Στοιχεία \n Φυσιοθεραπευτή"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="italic" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Όνομα "
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/newDoctorName"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/normal_textfileds_border"
                    android:ems="10"
                    android:hint="εώς 35 χαρακτήρες"
                    android:inputType="textPersonName"
                    android:paddingLeft="5dp"
                    android:paddingBottom="3dp" />

                <TextView
                    android:id="@+id/doctorNameErrorMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/errorColor"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="ID"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/newDoctorID"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/normal_textfileds_border"
                    android:ems="10"
                    android:hint="phyxxx"
                    android:inputType="textPersonName"
                    android:paddingLeft="5dp"
                    android:paddingBottom="3dp" />

                <TextView
                    android:id="@+id/idErrorMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/errorColor"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Email"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/newDoctorMail"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/normal_textfileds_border"
                    android:ems="10"
                    android:hint='"@gmail.com", εώς 50 χαρακτήρες'
                    android:inputType="textPersonName"
                    android:paddingLeft="5dp"
                    android:paddingBottom="3dp" />

                <TextView
                    android:id="@+id/mailErrorMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/errorColor"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Κωδικός Πρόσβασης"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/doctorPassword"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/normal_textfileds_border"
                    android:ems="10"
                    android:hint="εώς 20 χαρακτήρες"
                    android:inputType="textPersonName"
                    android:paddingLeft="5dp"
                    android:paddingBottom="3dp" />

                <TextView
                    android:id="@+id/passwordErrorMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/errorColor"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/addVisitButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="32dp"
                    android:backgroundTint="@color/buttonColor"
                    android:onClick="CreateNewPS"
                    android:text="@string/createTextButton"
                    android:textColor="@color/white"
                    android:textSize="16sp" />


            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:onClick="clearForm"
            android:text="@string/clearForm" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>